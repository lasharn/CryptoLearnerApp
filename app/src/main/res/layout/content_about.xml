<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="activities.AboutActivity"
    tools:showIn="@layout/activity_about">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock All"
        android:id="@+id/unlock_all"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/do_nothing"
        android:layout_alignEnd="@+id/do_nothing"
        android:layout_marginTop="73dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Progress"
        android:id="@+id/reset_progress"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/unlock_all"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Nothing"
        android:id="@+id/do_nothing"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/reset_progress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CryptoLearner was developed as a fourth year project at the University of Auckland by Software Engineering students Mathew and Lasharn"
        android:id="@+id/textView4"
        android:layout_marginTop="41dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:onClick="hacks"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/university_of_auckland_logo"/>
</RelativeLayout>
