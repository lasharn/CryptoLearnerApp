<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="activities.MainActivity"
    tools:showIn="@layout/activity_main"
    android:animateLayoutChanges="true"
    android:background="@color/mainColour"
    android:id="@+id/Background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/CaesarMainBtn"
        android:onClick="onClickCaesar"
        android:background="@color/mainColour" >

        <ImageView
            android:contentDescription="@string/caesar_btn"
            android:id="@+id/caesar_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_caesar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/caesar_btn"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@id/caesar_image"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/CaesarLvl1Btn"
        android:onClick="onClickChallenge"
        android:background="@color/mainColour"
        android:visibility="gone">

        <View
            android:id="@+id/anchor1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:contentDescription="@string/caesar_btn"
            android:id="@+id/caesar_lvl1_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/icon_key"
            android:layout_toLeftOf="@id/anchor1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/caesar_lvl1_btn"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/caesar_lvl1_image"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/CaesarLvl2Btn"
        android:onClick="onClickChallenge"
        android:background="@color/mainColour"
        android:visibility="gone">

        <View
            android:id="@+id/anchor2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:contentDescription="@string/caesar_btn"
            android:id="@+id/caesar_lvl2_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/icon_key"
            android:layout_toLeftOf="@id/anchor2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/caesar_lvl2_btn"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/caesar_lvl2_image"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/CaesarLvl3Btn"
        android:onClick="onClickChallenge"
        android:background="@color/mainColour"
        android:visibility="gone">

        <View
            android:id="@+id/anchor3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:contentDescription="@string/caesar_btn"
            android:id="@+id/caesar_lvl3_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/icon_key"
            android:layout_toLeftOf="@id/anchor3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/caesar_lvl3_btn"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/caesar_lvl3_image"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/CaesarLvl4Btn"
        android:onClick="onClickChallenge"
        android:background="@color/mainColour"
        android:visibility="gone">

        <View
            android:id="@+id/anchor4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:contentDescription="@string/caesar_btn"
            android:id="@+id/caesar_lvl4_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/icon_key"
            android:layout_toLeftOf="@id/anchor4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/caesar_lvl4_btn"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/caesar_lvl4_image"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="@string/substitution_btn"
        android:id="@+id/SubstitutionMainBtn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickSubstitution"
        android:background="@color/colourMix"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/substitution_lvl1_btn"
        android:id="@+id/SubLvl1Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@color/colourMix"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/substitution_lvl2_btn"
        android:id="@+id/SubLvl2Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@color/colourMix"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/substitution_lvl3_btn"
        android:id="@+id/SubLvl3Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@color/colourMix"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="@string/vigenere_btn"
        android:id="@+id/VigenereMainBtn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickVigenere"
        android:background="@color/secondaryColour" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/vigenere_lvl1_btn"
        android:id="@+id/VigenereLvl1Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@color/secondaryColour"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/vigenere_lvl2_btn"
        android:id="@+id/VigenereLvl2Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@color/secondaryColour"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/vigenere_lvl3_btn"
        android:id="@+id/VigenereLvl3Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@color/secondaryColour"
        android:visibility="gone"/>





</LinearLayout>
