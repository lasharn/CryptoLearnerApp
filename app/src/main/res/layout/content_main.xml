<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cryptolearner.mobile.cryptolearner.MainActivity"
    tools:showIn="@layout/activity_main"
    android:animateLayoutChanges="true"
    android:background="#777777">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/caeser_btn"
        android:textSize="20sp"
        android:id="@+id/Challenge1Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickCaesar"
        android:background="@drawable/wall_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 1"
        android:id="@+id/CaesarLvl1Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 2"
        android:id="@+id/CaesarLvl2Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 3"
        android:id="@+id/CaesarLvl3Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="@string/substitution_btn"
        android:id="@+id/Challenge2Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickSubstitution"
        android:background="@drawable/wall_button_blue"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 1"
        android:id="@+id/SubLvl1Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button_blue"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 2"
        android:id="@+id/SubLvl2Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button_blue"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 3"
        android:id="@+id/SubLvl3Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button_blue"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="@string/vigenere_btn"
        android:id="@+id/Challenge3Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickVigenere"
        android:background="@drawable/wall_button_red" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 1"
        android:id="@+id/VigenereLvl1Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button_red"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 2"
        android:id="@+id/VigenereLvl2Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button_red"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Challenge 3"
        android:id="@+id/VigenereLvl3Btn"
        android:layout_gravity="center_horizontal"
        android:width="200dp"
        android:onClick="onClickChallenge"
        android:background="@drawable/wall_button_red"
        android:visibility="gone"/>





</LinearLayout>
